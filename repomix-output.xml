        }
      })
    });

    if (!response.ok) {
      const error = await response.text();
      console.error('Failed to update assistant:', error);
      return false;
    }

    console.log('âœ… Assistant updated with all tools');
    return true;
  } catch (error) {
    console.error('Error updating assistant:', error);
    return false;
  }
}

