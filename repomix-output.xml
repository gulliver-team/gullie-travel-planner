  handler: async (ctx, args) => {
    const conversation = await ctx.db
      .query("conversations")
      .withIndex("by_call_id", (q) => q.eq("callId", args.callId))
      .first();

    if (conversation) {
      const mergedData = {
        ...conversation.extractedData,
