  const subscription = useQuery(
    api.subscriptions.getUserSubscription,
    user ? { userId: user.id } : "skip"
  );

  const checkouts = useQuery(
    api.subscriptions.getUserCheckouts,
    user ? { customerId: user.id } : "skip"
  );

