importScripts('https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js');

self.addEventListener('message', async (event) => {
  const { type, data } = event.data;
  
  if (type === 'GENERATE_PDF') {
    try {
      const pdf = await generatePDF(data);
