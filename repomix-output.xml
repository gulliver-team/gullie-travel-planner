// Store simulation results in the database
async function storeSimulationResults(
  ctx: any,
  userId: string,
  cityId: string,
  dateIds: string[],
  llmResponse: LLMResponse
): Promise<any[]> {
  const results = [];

  for (let i = 0; i < dateIds.length; i++) {
